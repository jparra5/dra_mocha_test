export DRA_FILE_3=#FILE_3#
export DRA_SERVER_3=#SERVER_3#
export DRA_CRITICAL_TESTCASES=#CRITICAL_TESTCASES#
        
#check for defined host/port, if null set defaults
if [ -z \"$HOST\" ]; then
    export HOST=ondemand.saucelabs.com
fi
        
if [ -z \"$PORT\" ]; then
    export PORT=80
fi

function custom_cmd {
    eval #COMMAND#
    RESULT=$?

    if [ $RESULT -ne 0 ]; then
        exit 1
    fi
}
    
export -f custom_cmd
    
echo \"DRA_CRITICAL_TESTCASES: ${DRA_CRITICAL_TESTCASES}\"

#. $EXT_DIR/execute.sh
